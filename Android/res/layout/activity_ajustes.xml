<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="uy.delperro.deliverylibre.Ajustes" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/yellow"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" >

        <Button
            android:id="@+id/BtnReciente"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/BtnCompras"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_clock"
            android:text="@string/icon_clock" />

        <Button
            android:id="@+id/BtnCompras"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/ViewCentral"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_clock"
            android:text="@string/icon_back" />

        <View
            android:id="@+id/ViewCentral"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/BtnVentas"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/ViewCentral"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_clock"
            android:text="@string/icon_forward" />

        <Button
            android:id="@+id/BtnConfig"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/BtnVentas"
            android:background="@android:color/transparent"
            android:contentDescription="@string/icon_clock"
            android:text="@string/icon_cog" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lineainferior"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/relativeLayout1"
        android:background="@color/linea"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Ajustes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lineainferior"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:elevation="2dp" >

        <TextView
            android:id="@+id/ajustesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="Acerca de"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/darkgrey"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/lineasuperior"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/ajustesTitle"
            android:background="@color/linea"
            android:orientation="vertical" >
        </LinearLayout>

        <ScrollView
            android:id="@+id/svConv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/lineasuperior"
            android:layout_centerHorizontal="true"
            android:background="@color/white" >

            <LinearLayout
                android:id="@+id/linearConv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
            

            <TextView
                android:id="@+id/Diego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Diego Maidana"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/darkgrey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descDiego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Diego"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Estudiante y desarrollador, 23 años. En el proyecto del Hackathon encargado de la aplicacion de Android"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/darkgrey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Martin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descDiego"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Martin Varela"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/darkgrey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descMartin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Martin"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Estudiante y desarrollador, 22 años. En el proyecto del Hackathon encargado del backend con Node js"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/darkgrey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Damian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/descMartin"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Damian Pintos"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/darkgrey"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descDamian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Damian"
                android:layout_centerHorizontal="true"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="Estudiante y desarrollador, 24 años. En el proyecto del Hackathon encargado de la aplicacion de iOS"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/darkgrey"
                android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>